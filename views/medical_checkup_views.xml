<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="view_medical_checkup_tree" model="ir.ui.view">
      <field name="name">hr.medical.checkup.tree</field>
      <field name="model">hr.medical.checkup</field>
      <field name="type">list</field> 
      <field name="arch" type="xml">
        <list>
        <field name="employee_id"/>
        <field name="checkup_date"/>
        <field name="next_checkup_date"/>
        <field name="result"/>
        </list>
      </field>
    </record>

    <record id="view_medical_checkup_form" model="ir.ui.view">
      <field name="name">hr.medical.checkup.form</field>
      <field name="model">hr.medical.checkup</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <field name="employee_id"/>
            <field name="checkup_date"/>
            <field name="next_checkup_date"/>
            <field name="result"/>
          </group>
        </form>
      </field>
    </record>

    <record id="action_medical_checkup" model="ir.actions.act_window">
      <field name="name">Badania lekarskie</field>
      <field name="res_model">hr.medical.checkup</field>
      <field name="view_mode">list,form</field>
      <field name="groups_id" eval="[(4, ref('hr_medical_checkups.group_hr_medical_user'))]"/>
    </record>

    <menuitem id="menu_medical_checkup_root" name="Badania lekarskie" parent="hr.menu_hr_main" sequence="35"/>
    <menuitem id="menu_medical_checkup_action" name="Lista badaÅ„" parent="menu_medical_checkup_root" action="action_medical_checkup" sequence="10"/>
  </data>
</odoo>
